#!/usr/bin/env bash

source bin/params

clear

echo -e "-------------------------------------------------------------------------"
echo -e "${FONT_BOLD}PHPCsFixer Report${FONT_NORMAL}"
echo -e "-------------------------------------------------------------------------"
docker-compose run --rm ${PHP_SERVICE} vendor/bin/php-cs-fixer fix --config=.php_cs.dist --show-progress=dots --allow-risky=yes --verbose
